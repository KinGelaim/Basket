<Window x:Class="BallisticWind.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки" Height="300" Width="300" WindowStartupLocation="Manual" FontSize="24">
    <Grid>
        <Label Content="Поправки" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbCorrection" Margin="10,47,10,0" VerticalAlignment="Top" Height="38" FontSize="24">
            <ListBoxItem Content="Поправки Камы"/>
            <ListBoxItem Content="Поправка 5 градусов"/>
        </ComboBox>
        <Label Content="Выбор кодировки" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbEncoding" Margin="10,137,10,0" VerticalAlignment="Top">
            <ListBoxItem Content="DOS"/>
            <ListBoxItem Content="Default"/>
            <ListBoxItem Content="DOC"/>
        </ComboBox>
        <Button x:Name="btnApply" Content="Принять" Margin="0,0,10,10" Height="38" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="125" Click="btnApply_Click"/>
    </Grid>
</Window>
